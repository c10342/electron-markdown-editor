{
  "name": "cloud-doc",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "electron-updater": "^4.2.0",
    "bootstrap": "^4.3.1",
    "axios": "^0.19.0",
    "electron-store": "^5.1.0",
    "qiniu": "^7.2.2",
    "electron-is-dev": "^1.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "restart": "nodemon --watch ./main.js --watch ./menuTemplate.js --exec \"electron .\"",
    "dev": "concurrently \"wait-on  http://localhost:3000 && npm run restart\" \"cross-env BROWSER=none npm start\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prepack": "npm run clear && npm run build",
    "predist": "npm run clear && npm run build",
    "clear": "rimraf dist && rimraf build",
    "release": "cross-env GH_TOKEN= electron-builder",
    "prerelease": "npm run clear && npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-brands-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "classnames": "^2.2.6",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "electron": "^13.6.6",
    "electron-builder": "^22.1.0",
    "node-sass": "^4.13.0",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0",
    "react-simplemde-editor": "^4.1.0",
    "rimraf": "^3.0.0",
    "uuid": "^3.3.3",
    "wait-on": "^3.3.0"
  },
  "electronDownload": {
    "mirror": "https://npm.taobao.org/mirrors/electron/"
  },
  "node-sassDownload": {
    "mirror": "https://npm.taobao.org/mirrors/node-sass/"
  },
  "homepage": "./",
  "build": {
    "productName": "七牛云文档",
    "appId": "cloudDoc",
    "copyright": "Copyright © year c10342",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "settings/**/*",
      "package.json",
      "main.js",
      "./AppWindow.js",
      "./menuTemplate.js",
      "./src/utils/QiniuManager.js"
    ],
    "extends": null,
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "Viking Zhang"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  }
}
